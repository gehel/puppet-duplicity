#!/bin/bash

set -e

<%- if @password -%>
PASSWORD=<%= @password %>
<%- end -%>

duplicity \
  --name <%= @backup_name %> \
  --full-if-older-than <%= @full_if_older_than %> \
  <%- if @ssh_key_file -%>
  --ssh-options -oIdentityFile=<%= @ssh_key_file %> \
  <%- end -%>
  --log-file <%= @log_file %> \
  <%- @includes.each do |include| -%>
  --include <%= include %> \
  <%- end -%>
  <%- @excludes.each do |exclude| -%>
  --exclude <%= exclude %> \
  <%- end -%>
  <%= @source_dir %> \
  <%= @target_url %>

duplicity collection-status --name <%= @backup_name %> <%= @target_url %>
